{
  "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS",
      "moduleResolution": "node",

      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,

      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "lib",
      "rootDir": "src",
      "isolatedModules": true
  },
  "include": ["src"]
}